---
interface Props {
  href: string;
  number: number;
  title: string;
  description: string;
  rules: string;
  concepts: string[];
}

const { href, number, title, description, rules, concepts } = Astro.props;
---
<a href={href} class="doc-card !grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-0">
  <div class="col-span-full doc-card-label">Tutorial {number}</div>
  <h2 class="col-span-full">{title}</h2>
  <p class="col-span-full !text-[var(--text-secondary)] !mb-4" set:html={description} />
  <ul class="self-start list-disc !pl-5 !mb-6 text-[13px] leading-[1.8] !text-[var(--text-secondary)]">
    {concepts.map((c) => <li>{c}</li>)}
  </ul>
  <div
    class="self-start overflow-x-auto min-w-0 hidden sm:block !mb-6 font-[var(--mono)] text-xs leading-[1.8] !p-4 bg-[var(--bg)] border border-[var(--border)] rounded-md whitespace-pre [&_.kw]:text-[var(--accent-text)] [&_.str]:text-[var(--green)]"
    set:html={rules}
  />
  <span class="col-span-full doc-card-link !mt-0 !pt-2">Build it &rarr;</span>
</a>
