---
import Logo from "./Logo.astro";
import Icon from "./Icon.astro";

interface Props {
  currentPage?: "index" | "examples" | "docs" | "integrations";
}
const { currentPage = "index" } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<nav aria-label="Main navigation">
  <div class="container">
    <a href={base} class="nav-logo">
      <Logo />
    </a>
    <ul class="nav-links">
      <li><a href={`${base}tutorials/`}>Tutorials</a></li>
      <li><a href={`${base}examples/`}>Examples</a></li>
      <li><a href={`${base}integrations/`}>Integrations</a></li>
      <li><a href={`${base}docs/`}>Documentation</a></li>
      <li><a href="https://www.npmjs.com/package/@petriflow/rules" class="nav-github" aria-label="npm"><Icon name="npm" size={36} /></a></li>
      <li><a href="https://github.com/joshuaisaact/petri-flow" class="nav-github"><Icon name="github" size={14} />GitHub</a></li>
    </ul>
  </div>
</nav>
