---
interface Props {
  size?: number;
}
const { size = 24 } = Astro.props;
---
<svg aria-hidden="true" width={size} height={size} viewBox="0 0 24 24" fill="none">
  <defs>
    <marker id="arrow" viewBox="0 0 6 6" refX="5" refY="3" markerWidth="4" markerHeight="4" orient="auto">
      <path d="M0,0.5 L5,3 L0,5.5" fill="rgba(139,92,246,0.6)" />
    </marker>
  </defs>
  <!-- arcs with arrowheads -->
  <line x1="9" y1="8.5" x2="11" y2="14.5" stroke="rgba(139,92,246,0.45)" stroke-width="1.5" marker-end="url(#arrow)"/>
  <line x1="15" y1="8.5" x2="13" y2="14.5" stroke="rgba(139,92,246,0.45)" stroke-width="1.5" marker-end="url(#arrow)"/>
  <!-- places -->
  <circle cx="6" cy="6" r="4" stroke="#8b5cf6" stroke-width="1.5"/>
  <circle cx="18" cy="6" r="4" stroke="#8b5cf6" stroke-width="1.5"/>
  <circle cx="12" cy="19" r="4" stroke="#34d399" stroke-width="1.5"/>
  <!-- token -->
  <circle cx="6" cy="6" r="1.5" fill="#8b5cf6"/>
</svg><span class="logo-text">Petri<span>Flow</span></span>
