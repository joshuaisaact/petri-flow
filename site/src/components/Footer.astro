---
import Logo from "./Logo.astro";

interface Props {
  variant?: "full" | "minimal";
}
const { variant = "full" } = Astro.props;
const base = import.meta.env.BASE_URL;
---
{variant === "full" ? (
  <footer>
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <a href={base} class="nav-logo">
            <Logo />
          </a>
          <p style="margin-top:12px;">
            Safety rules for AI agents.<br />
            Formally verified. Structurally enforced.
          </p>
        </div>
        <div class="footer-col">
          <h4>Product</h4>
          <a href="#how-it-works">How It Works</a>
          <a href="#rules">Safety Rules</a>
          <a href="#comparison">Comparison</a>
          <a href={`${base}examples/`}>Examples</a>
          <a href={`${base}docs/`}>Documentation</a>
        </div>
        <div class="footer-col">
          <h4>Community</h4>
          <a href="https://github.com/joshuaisaact/petri-flow">GitHub</a>
        </div>
      </div>
      <div class="footer-bottom">
        <span>&copy; 2026 PetriFlow. Open source under MIT. Built by <a href="https://joshtuddenham.dev/" style="color:var(--text-muted);text-decoration:underline;text-underline-offset:2px">Josh Tuddenham</a>.</span>
        <span style="font-family:var(--mono);font-size:12px;color:#333">formally verified, obviously</span>
      </div>
    </div>
  </footer>
) : (
  <footer class="footer-minimal">
    <div class="container">
      <a href={base} class="nav-logo">
        <Logo size={20} />
      </a>
      <span>&copy; 2026 PetriFlow</span>
    </div>
  </footer>
)}
