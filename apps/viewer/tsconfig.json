{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "paths": {
      "@workflows/*": ["../../workflows/*"],
      "@comparisons/*": ["../../comparisons/*"]
    }
  },
  "include": ["src"]
}
